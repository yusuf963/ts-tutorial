{
    "compilerOptions": {
        "types": ["mocha", "chai", "node"],
        "outDir": "dist",
        "target": "es6",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "noEmit": false,
        "noUncheckedIndexedAccess": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitUseStrict": true,
        "noEmitOnError": true,
        "preserveConstEnums": true,
        "lib": ["es2015", "dom"],
        // "strict": true,
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        // "noImplicitReturns": true,
        "noEmitHelpers": false, //if set to true, this means that I can not use the helpers in the tslib package as compiler will not emit these helper functions into the output JavaScript files,
    },
    "include": ["src/**/*.ts", "src/__test__/**/*", "custom.d.ts"],
    "exclude": ["node_modules", "dist"]
}
