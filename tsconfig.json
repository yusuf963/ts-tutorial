{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": false,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["es2015", "dom"]
  },
  "include": ["src/**/*.ts", "src/__test__/**/*", "custom.d.ts"],
  "exclude": ["node_modules", "dist"]
}
