{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "lib": ["es2015","dom", "dom.iterable", "esnext"],
  "include": ["src", "src/__test__/**/*", "custom.d.ts"]
}
